datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// -------------------- Enums --------------------

enum Source {
  facebook
  tiktok
}

enum FunnelStage {
  top
  bottom
}

enum Gender {
  male
  female
  non_binary
}

enum Referrer {
  newsfeed
  marketplace
  groups
}

enum ClickPosition {
  top_left
  bottom_right
  center
}

enum FacebookDevice {
  mobile
  desktop
}

enum Browser {
  Chrome
  Firefox
  Safari
}

enum TiktokDevice {
  Android
  iOS
  Desktop
}

// -------------------- Models --------------------

model Event {
  eventId            String           @id
  timestamp          DateTime
  source             Source
  funnelStage        FunnelStage
  eventType          String
  createdAt          DateTime         @default(now())
  updatedAt          DateTime         @updatedAt
  facebookUserId     String?
  facebookUser       FacebookUser?    @relation(fields: [facebookUserId], references: [userId])
  tiktokUserId       String?
  tiktokUser         TiktokUser?      @relation(fields: [tiktokUserId], references: [userId])
  facebookEngagement FacebookEngagement?
  tiktokEngagement   TiktokEngagement?
}

model FacebookUser {
  userId  String @id
  name    String
  age     Int
  gender  Gender
  country String
  city    String
  events  Event[]
}

model FacebookEngagement {
  eventId       String  @id
  event         Event   @relation(fields: [eventId], references: [eventId])
  actionTime    DateTime?
  referrer      Referrer?
  videoId       String?
  adId          String?
  campaignId    String?
  clickPosition ClickPosition?
  device        FacebookDevice?
  browser       Browser?
  purchaseAmount Decimal?
}

model TiktokUser {
  userId    String @id
  username  String
  followers Int
  events    Event[]
}

model TiktokEngagement {
  eventId         String  @id
  event           Event   @relation(fields: [eventId], references: [eventId])
  watchTime       Int?
  percentageWatched Float?
  device          TiktokDevice?
  country         String?
  videoId         String?
  actionTime      DateTime?
  profileId       String?
  purchasedItem   String?
  purchaseAmount  Decimal?
}
